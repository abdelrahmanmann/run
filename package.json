{
  "name": "gist-run",
  "version": "1.0.0",
  "description": "Create, edit and run GitHub Gists",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint --project tsconfig.json",
    "sprite": "svg-sprite --config svg-sprite.json \"node_modules/octicons/build/svg*/{code,gist,git-commit,info,repo-forked,trashcan}.svg\"",
    "preimg": "yarn run sprite",
    "img": "copyfiles --up 1 \"src/**/*.{ico,png,svg}\" dist",
    "html": "copyfiles --up 1 \"src/**/*.html\" dist",
    "sass": "node-sass src/editor/index.scss dist/editor/index.css --include-path node_modules",
    "prebuild": "rm -rf dist",
    "build": "tsc && yarn run sass && yarn run html && yarn run img",
    "serve-editor": "browser-sync start --server ./ --server dist/editor --files dist/editor --port 9000 --no-open --no-ui --no-online",
    "serve-worker": "browser-sync start --server ./ --server dist/worker --files dist/worker --port 3000 --no-open --no-ui --no-online",
    "watch-html": "chokidar \"src/**/*.html\" --command \"yarn run html\"",
    "predevelop": "yarn run build",
    "develop": "concurrently \"tsc --watch\" \"yarn run sass -- --watch --recursive\" \"yarn run serve-editor\" \"yarn run serve-worker\" \"yarn run watch-html\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gist-run/gist-run.git"
  },
  "keywords": [
    "GitHub",
    "Gist",
    "JavaScript",
    "TypeScript"
  ],
  "author": "[Jeremy Danyow] <jdanyow@gmail.com> (https://danyow.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gist-run/gist-run/issues"
  },
  "homepage": "https://github.com/gist-run/gist-run#readme",
  "devDependencies": {
    "@types/requirejs": "^2.1.28",
    "@types/service_worker_api": "^0.0.9",
    "browser-sync": "^2.18.8",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.4.0",
    "copyfiles": "^1.2.0",
    "node-sass": "^4.5.1",
    "svg-sprite": "^1.3.6",
    "tslint": "^4.5.1",
    "typescript": "rc"
  },
  "dependencies": {
    "aurelia-bootstrapper": "^2.1.1",
    "monaco-editor": "^0.8.3",
    "octicons": "^5.0.1",
    "primer-css": "^5.0.0",
    "requirejs": "^2.3.3",
    "text": "requirejs/text",
    "tslib": "^1.6.0"
  }
}
