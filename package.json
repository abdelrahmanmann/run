{
  "name": "gist-run",
  "version": "1.0.0",
  "description": "Create, edit and run GitHub Gists",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint --project tsconfig.json",
    "copy-html-css": "copyfiles --up 1 src/**/*.{html,css} dist",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "yarn run copy-html-css",
    "serve-editor": "browser-sync start --server ./ --server dist/editor --files dist/editor --port 9000 --no-open --no-ui --no-online",
    "serve-worker": "browser-sync start --server ./ --server dist/worker --files dist/worker --port 3000 --no-open --no-ui --no-online",
    "watch-html-css": "chokidar 'src/**/*.{html,css}' --command 'yarn run copy-html-css'",
    "prewatch": "yarn run build",
    "watch": "concurrently \"tsc --watch\" \"yarn run serve-editor\" \"yarn run serve-worker\" \"yarn run watch-html-css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gist-run/gist-run.git"
  },
  "keywords": [
    "GitHub",
    "Gist",
    "JavaScript",
    "TypeScript"
  ],
  "author": "[Jeremy Danyow] <jdanyow@gmail.com> (https://danyow.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gist-run/gist-run/issues"
  },
  "homepage": "https://github.com/gist-run/gist-run#readme",
  "devDependencies": {
    "@types/requirejs": "^2.1.28",
    "@types/service_worker_api": "^0.0.8",
    "browser-sync": "^2.18.7",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.1.0",
    "copyfiles": "^1.2.0",
    "tslint": "^4.4.2",
    "typescript": "rc"
  },
  "dependencies": {
    "aurelia-bootstrapper": "^2.0.1",
    "monaco-editor": "^0.8.1",
    "octicons": "^5.0.1",
    "primer-css": "^4.7.0",
    "requirejs": "^2.3.2",
    "text": "requirejs/text"
  }
}
